<% layout('layouts/boilerplate.ejs')%>
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/campgrounds/<%=campgrounds._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="campground[title]" value="<%=campgrounds.title%>"required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="campground[location]" value="<%=campgrounds.location%>"required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="price">Camground Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" placeholder="0.00" name="campground[price]" id="" aria-label="price" aria-describedby="price-label" value="<%=campgrounds.price%>"required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description Url</label>
                    <textarea class="form-control" type="text" id="description" name="campground[description]" required><%=campgrounds.description%></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3 form-file custom-file">
                    <label class="form-label" for="image">Upload Images</label>
                    <input class="form-control custom-file-input" type="file" id="image" name="image" multiple>
                    <label for="image" class="custom-file-label">Add More Images</label>
                </div>
                <div class="mb-3">
                    <div class="row row-cols-1 row-cols-md-4 g-4 mb-3">
                    <% campgrounds.images.forEach(function(img,i){ %>
                            <div class="card">
                                <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="" >
                                <div class="form-check-inline card-img-overlay text-end pt-1 pe-2">
                                    <input class="form-check-input" type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                                </div>
                                <label class="visually-hidden" for="image-<%=i%>">Delete?</label>
                            </div>
                            <% }) %>
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update Campground</button>
                </div>
                
                <a href="/campgrounds/<%= campgrounds._id %>">BACK TO CAMPGROUND</a>  
            </form>
        </div>
    </div>